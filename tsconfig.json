{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es5"
    ],
    "allowJs": true,
    "module": "es2015",
    "moduleResolution": "node",
    "isolatedModules": false,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": [
    "./sr/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true
}
